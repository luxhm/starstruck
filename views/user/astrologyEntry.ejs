<%- include('../partials/header' , {title:"Astrology Chart"}) -%>

<h2>Tell us a little about yourself!</h2>

<div id = "astrology">
<div id = "astrologyForm">
  <form>
  <label for="name">Name:</label>
  <input type="text" id="userName" name="userName" value=""><br>
  <label for="birthday">Birthday:</label>
  <input type="date" id="birthday" name="userBday" value=""><br>
  <label for="birthPlace">Place of Birth:</label>
  <input type="text" id="place" name="place" value=""><br>

  <div class="input-group clockpicker">
    <label for="birthTime">Time of Birth:</label>
    <input type="text" class="form-control" value="09:30">
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-time"></span>
    </span>
  </div>
  <script type="text/javascript">
  $('.clockpicker').clockpicker();
  </script>
  <input type="submit" value="Create a new user!">
</form>
</div>

<div id = "astrologyChart">
  <img id="astrologyChart" src = "images/chart.png" height="500">
</div>

</div>

