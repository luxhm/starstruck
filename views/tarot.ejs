<%- include('partials/header', {title:"Tarot"}) -%>
<h2><%= randomCard %> Tarot Card Drawn!</h2>
   <img src = "<%=tarotCards[randomCard].Photo%>" height="300">
   <p> Meaning of <%= randomCard %>: <%=tarotCards[randomCard].Meaning%></p>
   <p> Keywords: <%=tarotCards[randomCard].Keywords%></p>
<br>

<form action="/tarot" method="POST">
  <label for="name">Name:</label>
  <select name="name" id="name">
    <%for(i in users){%>
    <option value="<%= i %>"><%= i %></option>
    <% } %>
  </select>
  <br>
  <label for="card">Card drawn:</label>
  <select name="card" id="card">
    <%for(i in tarotCards){%>
    <option value="<%= i %>"><%= i %></option>
    <% } %>
  </select>
  <br><br>
  <input type="submit" value="Claim this future">

</form>
<br>

<%- include('partials/footer') -%>
